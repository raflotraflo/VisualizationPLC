<Window x:Class="VisualizationPLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizationPLC"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="156" TextWrapping="Wrap" Text="{Binding Main.JsonString, Source={StaticResource Locator}}" VerticalAlignment="Top" Width="582"/>

        <Button x:Name="button" Content="Pobierz" Command="{Binding Main.GetStringCommand, Source={StaticResource Locator}}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="507,438,0,0"/>
        
    </Grid>
</Window>
